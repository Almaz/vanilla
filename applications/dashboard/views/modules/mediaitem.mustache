<{{tag}} id="{{id}}" class="media media-item {{cssClass}}">
<div class="media-box {{boxCssClass}}">
  {{#imageUrl}}
  <a href="{{imageUrl}}">
  {{/imageUrl}}
    <img class="media-object {{imageCssClass}}" src="{{imageSource}}" alt="{{imageAlt}}">
  {{#imageUrl}}
  </a>
  {{/imageUrl}}
    <div class="media-box-body {{boxItemsCssClass}}">
    </div>
</div>
<div class="media-body {{bodyCssClass}}">
  {{#options}}
    <div class="btn-group pull-right">
      {{> dropdown}}
    </div>
  {{/options}}
  {{#hasButtons}}
      <div class="btn-group pull-right {{buttonsCssClass}}">
        {{#buttons}}
          {{> button}}
        {{/buttons}}
      </div>
  {{/hasButtons}}
  {{#heading}}
      <h4 class="media-heading {{headingCssClass}}">
        {{#headingUrl}}
        <a href="{{headingUrl}}">
        {{/headingUrl}}
        {{heading}}
        {{#headingUrl}}
        </a>
        {{/headingUrl}}
      </h4>
  {{/heading}}
    <div class="media-text {{textCssClass}}">{{text}}</div>
  {{#hasAttachments}}
    {{#attachments}}

    {{/attachments}}
  {{/hasAttachments}}
  {{#hasMeta}}
      <ul class="media-meta {{metaCssClass}}">
        {{#meta}}
            {{>metaitem}}
        {{/meta}}
      </ul>
  {{/hasMeta}}
  {{#hasMediaList}}
    {{>medialist}}
  {{/hasMediaList}}
</div>
</{{tag}}>
